<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:layout_height="200dp">
    
    <View
        android:id="@+id/placeholder_image_view"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="200dp"
        android:background="@color/mediumGray"
        android:layout_height="wrap_content"
        />

    <View
        android:id="@+id/placeholder_title"
        app:layout_constraintStart_toEndOf="@id/placeholder_image_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="12dp"
        android:layout_width="0dp"
        android:background="@color/mediumGray"
        android:layout_height="50dp"
        />
    <View
        android:id="@+id/placeholder_description"
        app:layout_constraintStart_toStartOf="@id/placeholder_title"
        app:layout_constraintEnd_toEndOf="@id/placeholder_title"
        app:layout_constraintTop_toBottomOf="@id/placeholder_title"
        android:layout_marginTop="12dp"
        android:layout_width="0dp"
        android:background="@color/mediumGray"
        android:layout_height="65dp"
        />

    <View
        android:id="@+id/placeholder_icon1"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:background="@color/mediumGray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/placeholder_description"
        app:layout_constraintTop_toBottomOf="@id/placeholder_description" />

    <View
        android:id="@+id/placeholder_icon2"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginStart="24dp"
        android:background="@color/mediumGray"
        app:layout_constraintStart_toEndOf="@id/placeholder_icon1"
        app:layout_constraintTop_toTopOf="@id/placeholder_icon1" />

    <View
        android:id="@+id/placeholder_icon3"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginStart="24dp"
        android:background="@color/mediumGray"
        app:layout_constraintStart_toEndOf="@id/placeholder_icon2"
        app:layout_constraintTop_toTopOf="@id/placeholder_icon2" />

</androidx.constraintlayout.widget.ConstraintLayout>